@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutReception.cshtml";
}
    <div class="meta">
        <h1 class="meta-tit">@ViewBag.atitle</h1>
        <p class="meta-info"> 发表日期:@ViewBag.creatTime</p>
    </div>
    <div class="entry">
        <p style="text-align:center">
            作者：@ViewBag.author
        </p>
        <div style="padding:0px;margin:0px;">
            @Html.Raw(ViewBag.content)
            <p style="font-family:楷体">文章版权属于文章作者所有，转载请注明：</p>
        </div>
    </div>
    <a id="aa" href="#top" target="_self" style="color:red">返回顶部</a>
    <script>
    $(function(){
        $("#aa").click(function() {
            $("html,body").animate({scrollTop:0}, 500);
        });
    })
    </script>